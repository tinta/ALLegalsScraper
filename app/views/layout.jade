doctype html
html
    head
        meta(http-equiv='content-type', content='text/html; charset=utf-8')

        //- CSS libs
        link(rel="stylesheet" type="text/css" href="/resources/css/reset.css")
        link(rel="stylesheet" type="text/css" href="/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/font-awesome/css/font-awesome.min.css")
        link(rel="stylesheet" type="text/css" href="/ng-table/dist/ng-table.min.css")

        //- CSS custom
        link(rel="stylesheet" type="text/css" href="/resources/css/index.css")
        link(rel="stylesheet" type="text/css" href="/resources/css/spacer.css")
        link(rel="stylesheet" type="text/css" href="/resources/css/modal.css")
        link(rel="stylesheet" type="text/css" href="/resources/css/form.css")
        link(rel="stylesheet" type="text/css" href="/resources/css/circle.css")
        link(rel="stylesheet" type="text/css" href="/resources/css/pad.css")

        //- JS libs
        script(type='text/javascript', src="/lodash/index.js")
        script(type='text/javascript', src="/moment/moment.js")
        script(type='text/javascript', src="/jquery/dist/jquery.min.js")
        script(type='text/javascript', src="/angular/angular.js")
        script(type='text/javascript', src="/angular-sanitize/angular-sanitize.js")
        script(type='text/javascript', src="/ng-table/dist/ng-table.js")
        script(type='text/javascript', src="https://connect.facebook.net/en_US/sdk.js")
        script(type='text/javascript', src="https://apis.google.com/js/client.js")

        //- JS custom
        script(type='text/javascript', src="/resources/js/app.js")
        script(type='text/javascript', src="/resources/js/controllers/listings.js")
        script(type='text/javascript', src="/resources/js/controllers/oauth.js")
        script(type='text/javascript', src="/resources/js/classes/Model.js")
        script(type='text/javascript', src="/resources/js/models/FieldModel.js")
        script(type='text/javascript', src="/resources/js/models/RowModel.js")
        script(type='text/javascript', src="/resources/js/oauth/google.js")
        script(type='text/javascript', src="/resources/js/oauth/fb.js")
        script(type='text/javascript', src="/resources/js/Util.js")
        script(type='text/javascript', src="/resources/js/Highlight.js")

        block head

    body.text-center(ng-app="app")
        div.spacer-md

        div.page-column.text-white.bg-red
            div.spacer-xs
            div.container.clearfix
                div.pull-left
                    div.spacer-xxs
                    h2
                        a.text-thin.pad-l(href="/") Mortgage Foreclosure Sales in Alabama

                div.pull-right(
                    ng-controller="Controller:OAuth"
                    ng-cloak
                )
                    div(ng-if="!user.isLoggedIn")
                        div.spacer-sm
                        h4.text-thin.pad-lr
                            a(ng-click="oauth.google.handleAuthClick()") Login
                    div.valign-top(ng-if="user.isLoggedIn")
                        div.pad-lr
                            div.spacer-sm
                            h4.text-thin [[user.firstName]]
                        div.pad-l
                            img.circle-sm(src="[[user.image.url]]")

            div.spacer-xs

        if region
            div.spacer-xs
            div.page-column.container
                div.text-left
                    - var selectedClass = 'bg-white text-red';
                    - var currentClass =  page === 'current' ? selectedClass : '';
                    - var nextWeekClass = page === 'next-week' ? selectedClass : '';
                    - var allClass =      page === 'all' ? selectedClass : '';
                    h4.text-thin.pad(class=currentClass)
                        a(href="/#{region}") Current
                    h4.text-thin.pad(class=nextWeekClass)
                        a(href="/#{region}/next-week") Next Week
                    h4.text-thin.pad(class=allClass)
                        a(href="/#{region}/all") All

        div.page-column.container
            block content
