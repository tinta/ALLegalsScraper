h4.text-left &nbsp;Home Stats
div.spacer-xxs

table.table.table-bordered
    thead
        tr
            td
                label.editable(for="bed")
                    span Bed
                    i.fa.fa-pencil

            td
                label.editable(for="bath")
                    span Bath
                    i.fa.fa-pencil

            td
                label.editable(for="lot_area")
                    span Lot Area (acres)
                    i.fa.fa-pencil

            td
                label.editable(for="indoor_area")
                    span Indoor Area (sqft)
                    i.fa.fa-pencil

    tbody
        tr
            +editableTD('bed', 14)
            +editableTD('bath', 15)
            +editableTD('lot_area', 16)
            +editableTD('indoor_area', 17)