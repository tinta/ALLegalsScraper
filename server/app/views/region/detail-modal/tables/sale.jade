table.table.table-bordered
    thead
        tr
            td
                label.editable(for="sale_location")
                    i.fa.fa-pencil
                    i.fa.fa-map-marker
                    span Sale Location

            td
                label.editable(for="appraisal_price")
                    i.fa.fa-pencil
                    i.fa.fa-dollar
                    span Appraisal Price
            td
                label.editable(for="buy_price")
                    i.fa.fa-pencil
                    i.fa.fa-dollar
                    span Mortgage Value

            td
                label.editable(for="last_sold_year")
                    i.fa.fa-pencil
                    i.fa.fa-calendar-o
                    span Mortgage Year

    tbody
        tr
            +editableTD('sale_location', 4)
            +editableTD('appraisal_price', 5)
            +editableTD('buy_price', 6)
            +editableTD('last_sold_year', 7)

