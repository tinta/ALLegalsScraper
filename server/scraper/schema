CREATE TABLE IF NOT EXISTS `foreclosures` (
  `uid` int(11) NOT NULL AUTO_INCREMENT,
  `timestamp` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  `case_id` varchar(31) NOT NULL,
  `county` varchar(31) NOT NULL,
  `body` text NOT NULL,
  `source` varchar(31) NOT NULL,
  `pub_date` date NOT NULL,

  `street_addr` varchar(100),
  `city` varchar(63),
  `sale_location` varchar(50),
  `sale_date` date,
  `zip` int(11),
  `appraisal_price` double,
  `last_sold_price` double,
  `last_sold_year` double,
  `buy_price` double,
  `name1` varchar(50),
  `name2` varchar(50),
  `bed` double,
  `bath` double,
  `lot_area` double,
  `indoor_area` double,
  `build_year` date,
  `notes` text,
  `attorny` varchar(50),
  `bank` varchar(50),
  PRIMARY KEY (`uid`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

